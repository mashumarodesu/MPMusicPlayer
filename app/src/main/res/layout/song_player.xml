<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idLLPlayer"
    android:orientation="vertical"
    android:background="@drawable/list_background"
    android:weightSum="10"
    tools:context=".PlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTVSongPlaying"
            android:layout_margin="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Loading song..."
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="italic"
            />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/list_background"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <SeekBar
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:id="@+id/idSBBar"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:layout_marginBottom="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idTVCurrentTime"
                android:layout_toLeftOf="@+id/idSBBar"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="false"
                android:layout_marginLeft="5dp"
                android:text="0:00"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idTVTotalTime"
                android:layout_toRightOf="@+id/idSBBar"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="false"
                android:layout_marginRight="5dp"
                android:text="5:00"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/idBPlay"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_pause_24" />

            <Button
                android:id="@+id/idBRepeat"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_toRightOf="@+id/idBPlay"
                android:background="@drawable/ic_baseline_repeat_24" />

            <Button
                android:id="@+id/idBNext"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_toRightOf="@+id/idBRepeat"
                android:background="@drawable/ic_baseline_skip_next_24" />

            <Button
                android:id="@+id/idBShuffle"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_toLeftOf="@id/idBPlay"
                android:background="@drawable/ic_baseline_shuffle_24" />

            <Button
                android:id="@+id/idBPrevious"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_toLeftOf="@+id/idBShuffle"
                android:background="@drawable/ic_baseline_skip_previous_24" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>